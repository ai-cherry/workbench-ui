# ================================
# WORKBENCH UI ENVIRONMENT CONFIG
# ================================
# Copy this file to .env.local and add your actual API keys

# ==============
# API Keys (REQUIRED)
# ==============
# Get your Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-YOUR_KEY_HERE

# Get your Portkey API key from: https://app.portkey.ai/
PORTKEY_API_KEY=pk-YOUR_KEY_HERE

# ==============
# MCP Server API Keys
# ==============
# GitHub Personal Access Token - https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=github_pat_YOUR_TOKEN_HERE

# Apify API Token - https://console.apify.com/account/integrations
APIFY_API_TOKEN=apify_api_YOUR_TOKEN_HERE

# Brave Search API Key - https://brave.com/search/api/
BRAVE_API_KEY=BSA_YOUR_KEY_HERE

# Exa API Key - https://exa.ai/
EXA_API_KEY=exa_YOUR_KEY_HERE

# ==============
# MCP Server Ports
# ==============
# These should match the ports in sophia-intel-ai
MCP_MEMORY_PORT=8081
MCP_FILESYSTEM_PORT=8082
MCP_ANALYTICS_PORT=8083
MCP_GIT_PORT=8084
MCP_UNIFIED_PORT=8085

# ==============
# Backend Integration
# ==============
# Path to sophia-intel-ai repository (relative or absolute)
SOPHIA_BACKEND_PATH=../sophia-intel-ai

# Sophia API endpoint
SOPHIA_API_URL=http://localhost:8000

# ==============
# Frontend Configuration
# ==============
# Public app URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable MCP integration
NEXT_PUBLIC_MCP_ENABLED=true

# Enable debug mode (verbose logging)
NEXT_PUBLIC_DEBUG=false

# ==============
# Optional: Advanced Configuration
# ==============
# Model preferences
DEFAULT_MODEL=claude-3-5-sonnet-20241022
FALLBACK_MODEL=gpt-4-turbo-preview

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json