{
  "mcpServers": {
    "// Internal MCP Servers for workbench-ui project": "",
    "// GitHub - Repository management, issues, PRs, and GitHub API operations": "",
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e", "GITHUB_PERSONAL_ACCESS_TOKEN",
        "-e", "GITHUB_TOOLSETS",
        "-e", "GITHUB_READ_ONLY",
        "-e", "GITHUB_APP_ID",
        "-e", "GITHUB_APP_INSTALLATION_ID",
        "-e", "GITHUB_APP_PRIVATE_KEY_PATH",
        "-e", "GITHUB_APP_PRIVATE_KEY_BASE64",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}",
        "GITHUB_TOOLSETS": "",
        "GITHUB_READ_ONLY": "",
        "GITHUB_APP_ID": "${GITHUB_APP_ID}",
        "GITHUB_APP_INSTALLATION_ID": "${GITHUB_APP_INSTALLATION_ID}",
        "GITHUB_APP_PRIVATE_KEY_PATH": "${GITHUB_APP_PRIVATE_KEY_PATH}",
        "GITHUB_APP_PRIVATE_KEY_BASE64": "${GITHUB_APP_PRIVATE_KEY_BASE64}"
      },
      "alwaysAllow": [
        "*"
      ]
    },
    "// Memory - Persistent knowledge graph for maintaining context across conversations": "",
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "alwaysAllow": [
        "*"
      ]
    },
    "// Sequential Thinking - Structured problem-solving with step-by-step analysis": "",
    "sequentialthinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "alwaysAllow": [
        "*"
      ]
    },
    "// Apify - Web scraping and automation platform": "",
    "apify": {
      "command": "npx",
      "args": [
        "-y",
        "@apify/actors-mcp-server"
      ],
      "env": {
        "APIFY_API_TOKEN": "${APIFY_API_TOKEN}"
      },
      "alwaysAllow": [
        "*"
      ]
    },
    "// Brave Search - Privacy-focused web search": "",
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "alwaysAllow": [
        "*"
      ]
    },
    "// Exa - AI-powered search engine": "",
    "exa": {
      "command": "npx",
      "args": [
        "-y",
        "exa-mcp-server"
      ],
      "env": {
        "EXA_API_KEY": "${EXA_API_KEY}"
      },
      "alwaysAllow": [
        "*"
      ]
    }
  }
}
